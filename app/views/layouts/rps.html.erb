<html>
<head>
  <title>RoPaSci</title>
  <%= stylesheet_link_tag "main.css", "grid12.css" %>
  <%= javascript_include_tag :defaults %>
</head>

<body>
  <div class="container_12">
    <div class="grid_12">
      <div id="header" class="grid_12">
	<h2 class="game">RoPaSci</h2>      
      </div>
    
    <div class="menu grid_10">
	  <% if !current_user %>
	  <%= link_to "Register", new_account_path %>
	  <%= link_to "Login In", new_user_session_path %>
	  <% else %>
	  <%= link_to "Logout", user_session_path, :method => :delete, :confirm => "Are you sure you want to log out?" %>
	  <%= link_to "Weapons", :controller => "weapon", :action => "index" %>
	  <%= link_to "My Account", account_path %>
	  <%= link_to "My Weapon Stats", :controller => "weapon", :action => "select" %>
	  <%= link_to "My Games", :controller => "games", :action => "index" %>
	  <%= link_to "Start Game", :controller => "games", :action => "new" %>
    <% end %>
  </div></div>
    <div class="grid_12">
    <div id="main" class="grid_11">
      <div class="error">
	  <% if !flash[:error].nil? %>
	    <% flash[:error].each do |error| %>
                 <%= error %><br />
	    <% end %>
	  <% end %>
      </div>
      
      <div class="notice">
	  <% if !flash[:notice].nil? %>
	     <% flash[:notice].each do |notice| %>
              <%= notice %><br />
	    <% end %>
	  <% end %>
      </div>
      <%= yield %>
    </div>
  </div></div>
</body>
</html>
