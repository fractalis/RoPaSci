<div class="box">
  <h2>RoPaSci Weapons</h2>

  <table>
    <tr>
      <th>Image</th>
      <th>Weapon Name</th>
      <th>Base Attack</th>
      <th>Base Defense</th>
      <th>Base HP Regen</th>
      <th>Attack Modifier</th>
      <th>Defense Modifier</th>
      <th>HP Regen Modifier</th>
    </tr>
    
    <% @weapons.each do |weapon| %>
    <tr>
      <td><%= image_tag(weapon.image_url, :size => "128x128") %></td>
      <td><%= weapon.name %></td>
      <td><%= weapon.base_attack %></td>
      <td><%= weapon.base_defense %></td>
      <td><%= weapon.base_hp_regen %></td>
      <td><%= weapon.mod_attack %></td>
      <td><%= weapon.mod_defense %></td>
      <td><%= weapon.mod_hp_regen %></td>
    </tr>
    <% end %>
  </table>
</div>


